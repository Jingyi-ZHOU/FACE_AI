<view class="view">
  <view class="window">
    <canvas  class="myCanvas" canvas-id="myCanvas" style="border: 1px solid;"/>
    <camera class="camera" device-position="front" wx:if="{{camera}}" flash="off"> </camera>
  </view>
  <view class="btn_all">
      <view class='btn_open'>
        <button bindtap="open" type="primary" data-type="takePhoto">Detect</button>
      </view>
      <view class='btn_close'>
        <button bindtap="close" type="primary" data-type="endPhoto">Stop</button>
      </view>    
  </view>

  <view class='face_pos'>
    <text>Face Position: {{x1}},{{y1}},{{x2}},{{y2}}</text>
  </view>

</view>


 
 
 
 